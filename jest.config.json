{
    "testTimeout": 10000,
    "projects": [
        {
            "displayName": {
                "name": "SRC",
                "color": "cyan"
            },
            "testMatch": ["<rootDir>/out/server/**/*.test.js"],
            "transformIgnorePatterns": [
                "/node_modules/"
            ],
            "verbose": true,
            "setupFiles": [
                "<rootDir>out/server/tests/setup-env"
            ],
            "setupFilesAfterEnv": [
                "<rootDir>out/server/tests/setup-tests"
            ],
            "globalSetup": "<rootDir>out/server/tests/restore-db"
        }
    ],
    "reporters": [
        "default",
        [
            "jest-html-reporter",
            {
                "pageTitle": "Tests Report",
                "outputPath": "./out/tests-report/index.html",
                "includeFailureMsg": true
            }
        ]
    ]
}